rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read any profile (for names), but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write to flats
    // In production, you would check if request.auth.uid is in resource.data.memberIds
    match /flats/{flatId} {
      allow read, write: if request.auth != null;
      
      // Allow authenticated users to read and write to chores subcollection
      match /chores/{choreId} {
        allow read, write: if request.auth != null;
        
        // Allow authenticated users to read and write completion history
        match /completions/{completionId} {
          allow read, write: if request.auth != null;
        }
      }
    }
  }
}
